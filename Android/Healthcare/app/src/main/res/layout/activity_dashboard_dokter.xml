<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardDokter">

    <TextView
        android:id="@+id/tv_antrian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/barlow_bold"
        android:text="TABEL ANTRIAN"
        android:textAlignment="center"
        android:textColor="#0B99A7"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_poli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="POLI UMUM"
        android:textColor="#0B99A7"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/tv_antrian"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_antrian_dokter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_poli"
        android:layout_marginTop="80dp"
        android:background="@drawable/myshape1"
        tools:listitem="@layout/item_list_antriandokter" />

</RelativeLayout>